{
  "name": "parley-server",
  "description": "A Prisma GraphQL based real-time chat service.",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "author": "Drake Costa <drake@saeris.io> (http://saeris.github.io/)",
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run start:dev",
    "start:local": "cross-env LOCAL=true nodemon --watch src src/server.js --exec babel-node --color",
    "start:dev": "cross-env LOCAL=false NODE_ENV=development serverless offline start --dontPrintOutput",
    "start:prod": "cross-env LOCAL=false NODE_ENV=production serverless --stage=production offline start --dontPrintOutput",
    "dev": "npm-run-all --parallel start playground",
    "debug": "nodemon -e js,graphql -x babel-node --inspect -r dotenv/config src/index.js",
    "deploy": "npm run deploy:dev",
    "deploy:dev": "cross-env NODE_ENV=development serverless --stage=dev deploy",
    "deploy:prod": "cross-env NODE_ENV=production serverless --stage=production deploy",
    "playground": "graphql playground",
    "setup": "babel-node setup.js && yarn prisma deploy",
    "test": "cross-env NODE_ENV=test nyc ava --verbose --color --tap",
    "test:watch": "ava --watch",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coverage:report": "cross-env NODE_ENV=test nyc report --color",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.3.2",
    "aws-lambda": "^0.1.2",
    "babel-polyfill": "7.0.0-beta.3",
    "bcryptjs": "2.4.3",
    "dataloader": "^1.3.0",
    "date-fns": "^1.28.5",
    "good": "^8.0.1",
    "good-winston": "^4.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.4.2",
    "graphql-playground-middleware-hapi": "^1.5.1",
    "graphql-playground-middleware-lambda": "^1.4.2",
    "graphql-query-complexity": "^0.1.2",
    "hapi": "^17.2.0",
    "jsonwebtoken": "8.1.1",
    "lerna": "^2.2.0",
    "lodash": "^4.17.5",
    "prisma-binding": "^1.5.3",
    "redis": "^2.8.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "aws-sdk": "^2.188.0",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "7.0.0-beta.3",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-node": "7.0.0-beta.3",
    "babel-plugin-espower": "^2.3.2",
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-provide-modules": "^1.0.3",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-env": "2.0.0-beta.0",
    "babel-preset-flow": "^7.0.0-beta.3",
    "babel-preset-power-assert": "^2.0.0",
    "babel-preset-stage-0": "^7.0.0-beta.3",
    "babel-register": "7.0.0-beta.3",
    "codecov": "^3.0.0",
    "cross-env": "^5.0.5",
    "del-cli": "^1.1.0",
    "dotenv": "^5.0.0",
    "env-cmd": "^7.0.0",
    "envfile": "^2.3.0",
    "eslint": "^4.17.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-compat": "^2.0.1",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-graphql": "^1.4.0-1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.64.0",
    "graphql-cli": "2.13.0",
    "lint-staged": "^6.0.0",
    "lodash-webpack-plugin": "^0.11.4",
    "nodemon": "^1.14.6",
    "npm-run-all": "4.1.2",
    "nyc": "^11.2.1",
    "power-assert": "^1.4.4",
    "prettier": "^1.7.0",
    "prisma": "1.1.2",
    "serverless-domain-manager": "^2.2.2",
    "serverless-offline": "^3.16.0",
    "serverless-webpack": "^4.2.0",
    "snyk": "^1.69.6",
    "tap-nyan": "^1.1.0",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "snyk": true,
  "ava": {
    "files": [
      "!src/**/*.js",
      "!**/webpack.config.js",
      "src/**/__TEST__/*.spec.js"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": "tap-nyan",
    "powerAssert": true,
    "require": [
      "babel-register",
      "babel-polyfill",
      "isomorphic-fetch"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "cache": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "src/**/__TEST__/*.spec.js",
      "build",
      "dist"
    ]
  }
}
